<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.carpool.driver.Driver_Create_Ride">

    <TextView
        android:id="@+id/Passenger_Num_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/seats_availability"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/seekBar_Num_Of_Passenger"
        app:layout_constraintTop_toBottomOf="@+id/cost_per_passenger" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:text="@string/add_your_ride_here"
        android:textAlignment="center"
        android:textColor="@color/purple_main_color"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/departure_time_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="@string/departure_time"
        app:layout_constraintBottom_toTopOf="@+id/choose_your_path"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/choose_your_path"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:hint="@string/choose_your_path"
        app:layout_constraintBottom_toTopOf="@+id/ride_expires_at"
        app:layout_constraintEnd_toStartOf="@+id/cost_per_passenger_updating"
        app:layout_constraintStart_toStartOf="@+id/cost_per_passenger_updating"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <SeekBar
        android:id="@+id/cost_per_passenger"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/cost_per_passenger"
        android:max="10"
        app:layout_constraintEnd_toStartOf="@+id/Passenger_Num"
        app:layout_constraintStart_toStartOf="@+id/Passenger_Num"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar_for_cost"
        app:textAboveThumbsColor="@color/purple_main_color" />

    <EditText
        android:id="@+id/ride_expires_at"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="198dp"
        android:hint="@string/ride_expires_at"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cost_per_passenger_updating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="24dp"
        android:text="@string/_0_jd"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/cost_per_passenger"
        app:layout_constraintStart_toEndOf="@+id/availableRoomsTextId" />

    <TextView
        android:id="@+id/Passenger_Num"
        android:layout_width="58dp"
        android:layout_height="23dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:text="@string/_0_seat"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_Num_Of_Passenger"
        app:layout_constraintStart_toStartOf="@+id/cost_per_passenger_updating"
        app:layout_constraintTop_toBottomOf="@+id/cost_per_passenger" />

    <ProgressBar
        android:id="@+id/progress_bar_for_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/cost_per_passenger"
        app:layout_constraintTop_toBottomOf="@+id/choose_your_path" />

    <EditText
        android:id="@+id/add_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="14dp"
        android:hint="@string/select_a_date"
        app:layout_constraintBottom_toTopOf="@+id/departure_time_driver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/availableRoomsTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="@string/cost_per_passenger"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cost_per_passenger_updating"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/submit_your_ride"
        android:textAlignment="center"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ride_expires_at" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="65dp"
        app:itemBackground="@color/purple_main_color_variant"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit_ride"
        app:menu="@menu/menu_navigation" />

    <SeekBar
        android:id="@+id/seekBar_Num_Of_Passenger"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="351dp"
        android:layout_height="42dp"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="110dp"
        android:max="4"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/submit_ride"
        app:layout_constraintEnd_toStartOf="@+id/Passenger_Num"
        app:layout_constraintStart_toStartOf="@+id/Passenger_Num"
        app:layout_constraintTop_toTopOf="@+id/availableRoomsTextId" />

    <TextView
        android:id="@+id/user_car_notFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have a car , add your car in profile page.  "
        android:textColor="@color/sonic_silver"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/add_date_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>