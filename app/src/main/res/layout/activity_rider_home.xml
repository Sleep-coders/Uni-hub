<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addlocation_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.carpool.rider.Rider_home">

    <TextView
        android:id="@+id/departuresoon_textview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white_main_color"
        android:gravity="center"
        android:text="Choose a trip"
        android:textAlignment="center"
        android:textColor="@color/black_main_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/cookie"
        android:text="As a Rider you can pick a suitable trip for you"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/availaberides_recyclerview"
        app:layout_constraintStart_toStartOf="@+id/availaberides_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/departuresoon_textview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/availaberides_recyclerview"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_note" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>