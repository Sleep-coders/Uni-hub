<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="389dp"
        android:layout_height="501dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="115dp"
        android:backgroundTint="@color/white_main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="187dp" />

        <TextView
            android:id="@+id/location_path_from_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/seats_number_available"
            app:layout_constraintEnd_toEndOf="@+id/time_of_the_trip"
            app:layout_constraintStart_toStartOf="@+id/time_of_the_trip"
            app:layout_constraintTop_toBottomOf="@+id/driver_name" />

        <TextView
            android:id="@+id/cost_of_the_trip"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="354dp" />

        <TextView
            android:id="@+id/date_of_the_trip"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="313dp" />

        <TextView
            android:id="@+id/time_of_the_trip"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/seats_number_available"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="286dp" />

        <ImageView
            android:id="@+id/car_img_from_driver"
            android:layout_width="184dp"
            android:layout_height="184dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="3dp" />

        <Button
            android:id="@+id/joinride_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_main_color"
            android:text="Join Ride"
            android:textColor="@color/white_pure"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="418dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>