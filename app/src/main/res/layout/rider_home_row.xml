<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="389dp"
        android:layout_height="501dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="115dp"
        android:backgroundTint="@color/white_main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/location_path_from_driver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/car_img_from_driver" />

        <TextView
            android:id="@+id/location_path_from_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/time_of_the_trip"
            app:layout_constraintEnd_toEndOf="@+id/time_of_the_trip"
            app:layout_constraintStart_toStartOf="@+id/time_of_the_trip"
            app:layout_constraintTop_toBottomOf="@+id/driver_name" />

        <TextView
            android:id="@+id/cost_of_the_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="82dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/seats_number_available"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_of_the_trip" />

        <TextView
            android:id="@+id/date_of_the_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/seats_number_available"
            app:layout_constraintEnd_toEndOf="@+id/cost_of_the_trip"
            app:layout_constraintStart_toStartOf="@+id/cost_of_the_trip"
            app:layout_constraintTop_toBottomOf="@+id/time_of_the_trip" />

        <TextView
            android:id="@+id/time_of_the_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/date_of_the_trip"
            app:layout_constraintEnd_toEndOf="@+id/date_of_the_trip"
            app:layout_constraintStart_toStartOf="@+id/date_of_the_trip"
            app:layout_constraintTop_toBottomOf="@+id/location_path_from_driver" />

        <TextView
            android:id="@+id/seats_number_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="37dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/joinride_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cost_of_the_trip"
            app:layout_constraintTop_toBottomOf="@+id/date_of_the_trip" />

        <ImageView
            android:id="@+id/car_img_from_driver"
            android:layout_width="184dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/driver_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/joinride_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:backgroundTint="@color/purple_main_color"
            android:text="Join Ride"
            android:textColor="@color/white_pure"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seats_number_available" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>