<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/room_cost_id"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cost"
                android:textColor="@color/purple_main_color"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/user_name_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/user_name_id"
                app:layout_constraintTop_toBottomOf="@+id/user_name_id" />

            <TextView
                android:id="@+id/user_name_id"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#7d45a0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toEndOf="@+id/room_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.056" />

            <TextView
                android:id="@+id/room_location_id"
                android:layout_width="160dp"
                android:layout_height="64dp"
                android:text="Location"
                android:textColor="#7d45a0"
                android:textFontWeight="350"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/user_name_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/user_name_id"
                app:layout_constraintTop_toBottomOf="@+id/room_cost_id"
                app:layout_constraintVertical_bias="0.100000024" />

            <ImageView
                android:id="@+id/room_image"
                android:layout_width="195dp"
                android:layout_height="180dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.032"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/car1" />

            <Button
                android:id="@+id/req_room_btn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.562"
                app:layout_constraintStart_toEndOf="@+id/room_image"
                app:layout_constraintTop_toBottomOf="@+id/room_location_id"
                app:layout_constraintVertical_bias="0.375"
                tools:ignore="DuplicateClickableBoundsCheck" />

            <Button
                android:id="@+id/del_room_btn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow_main_color_variant"
                android:text="Delete"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/req_room_btn"
                app:layout_constraintEnd_toEndOf="@+id/req_room_btn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/req_room_btn"
                app:layout_constraintTop_toTopOf="@+id/req_room_btn"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>