<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.carpool.rider.RideDetails">

    <TextView
        android:id="@+id/carpool_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow_main_color"
        android:backgroundTint="@color/white_main_color"
        android:text="carpool_name"
        android:textColor="@color/purple_main_color_variant"
        android:textColorLink="@color/yellow_main_color"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ride_detail_cardview"
        android:layout_width="356dp"
        android:layout_height="313dp"
        android:backgroundTint="@color/white_main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188">

        <TextView
            android:id="@+id/driver_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="driver_name"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/driver_details_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="driver_details"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/car_model_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="@string/car_model"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/contact_info_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:text="contact_info"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/carimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="130dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/trip_info_cardview"
        android:layout_width="354dp"
        android:layout_height="193dp"
        android:backgroundTint="@color/white_main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747">

        <TextView
            android:id="@+id/tripinfo_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="trip_info"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/time_date_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="time_and_date"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/availabe_passengers_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="availabe_passengers"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/rout_in_details_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:text="rout_in_details"
            android:textAlignment="center"
            android:textColor="@color/black_main_color"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/request_ride_btn"
        android:layout_width="245dp"
        android:layout_height="61dp"
        android:backgroundTint="@color/yellow_main_color"
        android:text="request_a_ride"
        android:textColor="@color/black_main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_info_cardview"
        app:layout_constraintVertical_bias="0.146" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="43dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/ic_notification" />

</androidx.constraintlayout.widget.ConstraintLayout>