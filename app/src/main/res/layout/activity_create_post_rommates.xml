<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.roommates.Create_post_Rommates">

    <TextView
        android:id="@+id/createPostTextId"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Create Your Post Here!"
        android:textAlignment="center"
        android:textColor="#7d45a0"
        android:textFontWeight="400"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/roomImageTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />


    <Button
        android:id="@+id/uploadImageBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/purple_main_color"
        android:text="Upload Image"
        app:layout_constraintBottom_toBottomOf="@+id/ic_imageId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomImageTextId"
        app:layout_constraintVertical_bias="0.954" />

    <TextView
        android:id="@+id/roomImageTextId"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-light"
        android:text="Room Image"
        android:textColor="#7d45a0"
        android:textFontWeight="400"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ic_imageId"
        app:layout_constraintEnd_toStartOf="@+id/uploadImageBtnId"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/roomLocationTextId"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-light"
        android:text="Room Location"
        android:textColor="#7d45a0"
        android:textFontWeight="400"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/locationPlainTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/locationPlainTextId"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-light"
        android:hint="Amman, Jubaiha"
        android:inputType="textPersonName"
        android:textColor="#7d45a0"
        android:textFontWeight="400"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/roomCostTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addPostBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Add a Post"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/roomCostTextId"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Room Cost"
        android:textColor="#7d45a0"
        android:textFontWeight="400"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/progressBarTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="0JD"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/progressBarTextId"
        app:layout_constraintTop_toBottomOf="@+id/locationPlainTextId"
        app:layout_constraintVertical_bias="0.984" />

    <SeekBar
        android:id="@+id/seekBarId"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginBottom="28dp"

        app:layout_constraintBottom_toTopOf="@+id/addPostBtnId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/purple_main_color_variant"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

    <ImageView
        android:id="@+id/ic_imageId"
        android:layout_width="172dp"
        android:layout_height="124dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/roomLocationTextId"
        app:layout_constraintEnd_toStartOf="@+id/uploadImageBtnId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_image" />

</androidx.constraintlayout.widget.ConstraintLayout>