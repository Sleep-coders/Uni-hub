    <style name="Theme.Unihub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_main_color</item>
        <item name="colorPrimaryVariant">@color/purple_main_color_variant</item>
        <item name="colorOnPrimary">@color/white_main_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_main_color</item>
        <item name="colorSecondaryVariant">@color/yellow_main_color_variant</item>
        <item name="colorOnSecondary">@color/black_main_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/white_main_color</item>

    </style>

    <style name="Theme.Unihub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Unihub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Unihub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

